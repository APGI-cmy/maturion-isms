{
  "family": "mat-ai-gateway",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "REPLACE_WITH_ECS_EXECUTION_ROLE_ARN",
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "mat-ai-gateway",
      "image": "PLACEHOLDER_IMAGE",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "SUPABASE_URL", "value": "REPLACE_WITH_SUPABASE_URL" },
        { "name": "MODEL_NAME", "value": "REPLACE_WITH_MODEL_NAME" }
      ],
      "secrets": [
        {
          "name": "SUPABASE_SERVICE_ROLE_KEY",
          "valueFrom": "arn:aws:ssm:REPLACE_WITH_REGION:REPLACE_WITH_ACCOUNT_ID:parameter/mat-ai-gateway/SUPABASE_SERVICE_ROLE_KEY"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:ssm:REPLACE_WITH_REGION:REPLACE_WITH_ACCOUNT_ID:parameter/mat-ai-gateway/OPENAI_API_KEY"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mat-ai-gateway",
          "awslogs-region": "REPLACE_WITH_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
